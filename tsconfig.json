{
  "compilerOptions": {
    "lib": ["es2023"],
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "target": "es6",
    "outDir": "dist"
  },
  "include": ["src/**/*.js", "typescript.js"],
  "exclude": ["node_modules"]
}
